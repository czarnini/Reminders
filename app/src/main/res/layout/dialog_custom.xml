<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/custom_root_layout"
              android:orientation="vertical"
              android:layout_width="300dp"
              android:layout_height="fill_parent"
              android:padding="16dp">
    <TextView
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="24sp"
        android:gravity="center"
        android:text="@string/nowe_przypomnienie"/>

    <EditText
        android:id="@+id/custom_edit_reminder"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <requestFocus />

    </EditText>
    <CheckBox
        android:id="@+id/custom_check_box"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/wazne"
        android:textSize="24sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/custom_button_cancel"
            android:textColor="#2196F3"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="50dp"
            android:text="@string/anuluj"/>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/custom_button_commit"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="50dp"
            android:text="@string/zatwierdz"
            android:textColor="#2196F3"/>
    </LinearLayout>

</LinearLayout>